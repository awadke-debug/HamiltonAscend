<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>ucinn_ascendv2__Session_Description__c</field>
        <field>ucinn_ascendv2__Gift_Specialist_Comments__c</field>
        <field>ucinn_ascendv2__No_of_Transactions_Posted__c</field>
        <field>ucinn_ascendv2__Gift_Pledge_Payment_Amount__c</field>
        <field>ucinn_ascendv2__Gift_Pledge_Payment_Amount_Posted__c</field>
        <field>ucinn_ascendv2__Pledge_Amount__c</field>
        <field>ucinn_ascendv2__Pledge_Amount_Posted__c</field>
        <field>ucinn_ascendv2__Pre_Balance_Report_Formula__c</field>
        <field>ucinn_ascendv2__Session_Operator_Assigned__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>ucinn_ascendv2__Session_Operator_Assigned__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>FALSE</formula>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Session Age Auto-Reject</label>
        <name>Session_Age_Auto_Reject</name>
    </approvalStep>
    <description>If the Session Date is more than 30 days in the past the request is automatically rejected.</description>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>ucinn_ascendv2__Session_Date__c &lt; TODAY() - 30</formula>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Mark_as_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Session_Rejected_Session_Date_Age</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Status_to_Needs_Revisions</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ucinn_ascendv2__Clear_Completed_by_Gift_Specialist</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ucinn_ascendv2__Clear_Session_Totals_Approved_Time</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ucinn_ascendv2__Uncheck_Ready_for_G_L</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ucinn_ascendv2__Uncheck_Sent_to_G_L</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Auto-Reject: Session Age</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
