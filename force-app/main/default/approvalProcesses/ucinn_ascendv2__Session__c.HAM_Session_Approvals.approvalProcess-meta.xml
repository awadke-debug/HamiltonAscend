<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>ucinn_ascendv2__Session_Description__c</field>
        <field>ucinn_ascendv2__Gift_Specialist_Comments__c</field>
        <field>ucinn_ascendv2__No_of_Transactions_Posted__c</field>
        <field>ucinn_ascendv2__Gift_Pledge_Payment_Amount__c</field>
        <field>ucinn_ascendv2__Gift_Pledge_Payment_Amount_Posted__c</field>
        <field>ucinn_ascendv2__Pledge_Amount__c</field>
        <field>ucinn_ascendv2__Pledge_Amount_Posted__c</field>
        <field>ucinn_ascendv2__Pre_Balance_Report_Formula__c</field>
        <field>ucinn_ascendv2__Session_Operator_Assigned__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Owner</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approve Completed Session</label>
        <name>Approve_Completed_Session</name>
    </approvalStep>
    <description>Handles the session process of the gift processors.</description>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>ucinn_ascendv2__Session__c.ucinn_ascendv2__Is_Completed_by_Gift_Specialist__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>ucinn_ascendv2__Session__c.HAM_Status__c</field>
            <operation>equals</operation>
            <value>In Progress</value>
        </criteriaItems>
        <criteriaItems>
            <field>ucinn_ascendv2__Session__c.HAM_Rejected__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Set_Status_to_Closed</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ucinn_ascendv2__Ready_for_G_L</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ucinn_ascendv2__Set_Session_Totals_Approved_Time</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Mark_as_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Status_to_Needs_Revisions</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ucinn_ascendv2__Clear_Completed_by_Gift_Specialist</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ucinn_ascendv2__Clear_Session_Totals_Approved_Time</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ucinn_ascendv2__Uncheck_Ready_for_G_L</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ucinn_ascendv2__Uncheck_Sent_to_G_L</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ucinn_ascendv2__Your_session_has_been_rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_as_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Status_to_Ready_for_Reconciliation</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Hamilton Session Approvals</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
