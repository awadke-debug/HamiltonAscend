<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>Generate a task to prompt presidential acknowledgements automatically when a gift, pledge payment, or pledge greater than or equal to $20,000 is made OR if a trustee makes any gift or pledge.

V-11: Added entry criteria for only creating task for primary donor</description>
    <environments>Default</environments>
    <interviewLabel>Presidential Acknowledgement Task Generation {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Presidential Acknowledgement Task Generation</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordCreates>
        <description>Create a Presidential Acknowledgement Task</description>
        <name>HAM_Create_a_Presidential_Acknowledgement_Task</name>
        <label>Create a Presidential Acknowledgement Task</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <inputAssignments>
            <field>ActivityDate</field>
            <value>
                <elementReference>$Record.CreatedDate</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>HAM_Hard_and_Soft_Credit__c</field>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>OwnerId</field>
            <value>
                <elementReference>$Record.CreatedById</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Priority</field>
            <value>
                <stringValue>High</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Status</field>
            <value>
                <stringValue>Open</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Subject</field>
            <value>
                <stringValue>Presidential Acknowledgment</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>WhatId</field>
            <value>
                <elementReference>$Record.ucinn_ascendv2__Account__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>WhoId</field>
            <value>
                <elementReference>$Record.ucinn_ascendv2__Contact__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>ucinn_ascendv2__Correspondence_Type__c</field>
            <value>
                <stringValue>Phone</stringValue>
            </value>
        </inputAssignments>
        <object>Task</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordCreates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>HAM_Create_a_Presidential_Acknowledgement_Task</targetReference>
        </connector>
        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterLogic>(((1 OR 2 OR 3 OR 4) AND 5 AND 6 AND 7 AND (8 OR 9)) OR 10) AND 11</filterLogic>
        <filters>
            <field>HAM_Pledge_Gift_Opportunity_Record_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Gift</stringValue>
            </value>
        </filters>
        <filters>
            <field>HAM_Pledge_Gift_Opportunity_Record_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Pledge</stringValue>
            </value>
        </filters>
        <filters>
            <field>HAM_Pledge_Gift_Opportunity_Record_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Matching Gift</stringValue>
            </value>
        </filters>
        <filters>
            <field>HAM_Pledge_Gift_Opportunity_Record_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Recurring Gift</stringValue>
            </value>
        </filters>
        <filters>
            <field>ucinn_ascendv2__Pledge_Gift_Stage_Formula__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>Adjusted</stringValue>
            </value>
        </filters>
        <filters>
            <field>ucinn_ascendv2__Pledge_Gift_Stage_Formula__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>Cancelled</stringValue>
            </value>
        </filters>
        <filters>
            <field>ucinn_ascendv2__Pledge_Gift_Stage_Formula__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>Withdrawn</stringValue>
            </value>
        </filters>
        <filters>
            <field>ucinn_ascendv2__Amount_Formula__c</field>
            <operator>GreaterThanOrEqualTo</operator>
            <value>
                <numberValue>20000.0</numberValue>
            </value>
        </filters>
        <filters>
            <field>ucinn_ascendv2__Credit_Amount__c</field>
            <operator>GreaterThanOrEqualTo</operator>
            <value>
                <numberValue>20000.0</numberValue>
            </value>
        </filters>
        <filters>
            <field>HAM_Constituent_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Trustee</stringValue>
            </value>
        </filters>
        <filters>
            <field>HAM_Is_Primary_Donor__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>ucinn_ascendv2__Hard_and_Soft_Credit__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
