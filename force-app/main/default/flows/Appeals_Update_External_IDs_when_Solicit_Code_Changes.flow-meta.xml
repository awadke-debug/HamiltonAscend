<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <description>Used in combination with gift imports from Make a Gift, Stripe, GiveCampus. This flow updates the external ID to match the solicit code. Needed for automation.</description>
    <environments>Default</environments>
    <interviewLabel>Appeals - Update External IDs when Solicit Code Changes {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Appeals - Update External IDs when Solicit Code Changes</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Ext_IDs</name>
        <label>Update Ext IDs</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <inputAssignments>
            <field>HAM_External_Id__c</field>
            <value>
                <elementReference>$Record.ucinn_ascendv2__Motivation_Code__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>UCIN_External_ID__c</field>
            <value>
                <elementReference>$Record.ucinn_ascendv2__Motivation_Code__c</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Ext_IDs</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>ucinn_ascendv2__Motivation_Code__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Campaign</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
