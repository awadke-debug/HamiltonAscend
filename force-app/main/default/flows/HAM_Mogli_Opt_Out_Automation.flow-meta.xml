        </connector>
    </assignments>
    <assignments>
        <description>Update preference to true if decision is to opt out.</description>
        <name>Assign_SMSM_Preference_Value_as_False</name>
        <label>Assign SMS Preference Value as False</label>
        <locationX>685</locationX>
        <locationY>454</locationY>
        <assignmentItems>
            <assignToReference>vSMSPreference</assignToReference>
            <operator>Assign</operator>
