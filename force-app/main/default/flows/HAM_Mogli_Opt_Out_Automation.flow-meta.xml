            </value>
        </assignmentItems>
        <connector>
            <targetReference>Which_object</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>SMS_Preference</name>
        <label>SMS Preference</label>
        <locationX>473</locationX>
        <locationY>371</locationY>
        <defaultConnectorLabel>Default</defaultConnectorLabel>
        <rules>
            <name>Opt_Out</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Mogli_SMS__Message__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>STOP</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Mogli_SMS__Message__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>CANCEL</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Mogli_SMS__Message__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>UNSUBSCRIBE</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Mogli_SMS__Message__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>END</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Mogli_SMS__Message__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>QUIT</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Mogli_SMS__Message__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>STOPALL</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_SMS_Preference_Value_as_True</targetReference>
            </connector>
            <label>Opt-Out</label>
        </rules>
        <rules>
            <name>Opt_In</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Mogli_SMS__Message__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>START</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Mogli_SMS__Message__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>YES</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Mogli_SMS__Message__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>UNSTOP</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Mogli_SMS__Message__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>SUBSCRIBE</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Mogli_SMS__Message__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>JOIN</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_SMSM_Preference_Value_as_False</targetReference>
            </connector>
            <label>Opt-In</label>
        </rules>
    </decisions>
    <decisions>
        <name>Which_object</name>
        <label>Which object?</label>
        <locationX>481</locationX>
        <locationY>671</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Contact</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Contact</targetReference>
            </connector>
            <label>Contact</label>
        </rules>
        <rules>
            <name>Lead</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Mogli_SMS__Lead__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Lead</targetReference>
            </connector>
            <label>Lead</label>
        </rules>
    </decisions>
    <description>Automation to check or uncheck the Mogli contact opt-out box if a user directly texts their preferences, w/o default so only SMS meeting START/STOP keywords executes flow</description>
    <environments>Default</environments>
