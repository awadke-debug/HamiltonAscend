        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Mogli_SMS__Lead__r.Id</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Mogli_SMS__Mogli_Opt_Out__c</field>
            <value>
