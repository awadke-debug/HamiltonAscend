<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <description>Updates Spouse or Partner Credit flag to TRUE where spouse relationship is created and &quot;Auto Apply Soft Credit&quot; is TRUE</description>
    <environments>Default</environments>
    <interviewLabel>Add Spouse or Partner Credit Flag {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Add Spouse or Partner Credit Flag</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Set_Other_Spouse_or_Partner_Credit_Flag</name>
        <label>Set Other Spouse or Partner Credit Flag</label>
        <locationX>308</locationX>
        <locationY>384</locationY>
        <inputAssignments>
            <field>HAM_Spouse_or_Partner_Soft_Credit__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputReference>$Record.ucinn_ascendv2__Related_Contact__r</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>Set_Spouse_or_Partner_Credit_Flag</name>
        <label>Set Spouse or Partner Credit Flag</label>
        <locationX>308</locationX>
        <locationY>276</locationY>
        <connector>
            <targetReference>Set_Other_Spouse_or_Partner_Credit_Flag</targetReference>
        </connector>
        <inputAssignments>
            <field>HAM_Spouse_or_Partner_Soft_Credit__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputReference>$Record.ucinn_ascendv2__Contact__r</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterFormula>AND(ISPICKVAL({!$Record.ucinn_ascendv2__Related_Contact_Role__c}, &quot;Spouse&quot;), {!$Record.ucinn_ascendv2__Apply_Soft_Credit__c} = TRUE)</filterFormula>
        <object>ucinn_ascendv2__Relationship__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <scheduledPaths>
            <name>Fire_Delay</name>
            <connector>
                <targetReference>Set_Spouse_or_Partner_Credit_Flag</targetReference>
            </connector>
            <label>Fire Delay</label>
            <offsetNumber>4</offsetNumber>
            <offsetUnit>Minutes</offsetUnit>
            <timeSource>RecordTriggerEvent</timeSource>
        </scheduledPaths>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Obsolete</status>
</Flow>
