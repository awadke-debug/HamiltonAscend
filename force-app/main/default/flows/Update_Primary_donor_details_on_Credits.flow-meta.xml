    <decisions>
        <name>Check_if_the_credit_is_for_constituent_or_organization</name>
        <label>Check if the credit is for constituent or organization</label>
        <locationX>446</locationX>
        <locationY>323</locationY>
        <defaultConnector>
            <targetReference>Check_Primary_donor_Organization</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Is Organization Credit</defaultConnectorLabel>
        <rules>
            <name>Is_Constituent_credit</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.ucinn_ascendv2__Contact__c</leftValueReference>
                <operator>IsBlank</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Check_Primary_donor_constituent</targetReference>
            </connector>
            <label>Is Constituent credit</label>
        </rules>
    </decisions>
    <decisions>
        <name>Check_Primary_donor_constituent</name>
        <label>Check Primary donor constituent</label>
        <locationX>182</locationX>
        <locationY>431</locationY>
        <defaultConnector>
            <targetReference>Remove_Credit_Record_with_primary_donor</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>not a primary donor constituent</defaultConnectorLabel>
        <rules>
            <name>Is_Primary_Donor</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.ucinn_ascendv2__Contact__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>$Record.ucinn_ascendv2__Opportunity__r.HAM_Primary_Donor__c</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Credit_Record_with_primary_donor</targetReference>
            </connector>
            <label>Is Primary Donor</label>
        </rules>
    </decisions>
    <decisions>
        <name>Check_Primary_donor_Organization</name>
