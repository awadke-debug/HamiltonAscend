        <defaultConnectorLabel>not a primary donor organization</defaultConnectorLabel>
        <rules>
            <name>Is_Primary_Donor_organization</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.ucinn_ascendv2__Account__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>$Record.ucinn_ascendv2__Opportunity__r.HAM_Primary_Donor_organization__c</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Credit_Record_with_primary_donor_Organization</targetReference>
            </connector>
            <label>Is Primary Donor organization</label>
        </rules>
    </decisions>
